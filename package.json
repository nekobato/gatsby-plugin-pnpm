{
  "name": "@nekobato/gatsby-plugin-pnpm",
  "version": "1.4.0",
  "description": "Maintained fork of gatsby-plugin-pnpm with pnpm support for modern virtual store layouts",
  "type": "module",
  "main": "./dist/gatsby-node.js",
  "types": "./dist/gatsby-node.d.ts",
  "exports": {
    ".": {
      "types": "./dist/gatsby-node.d.ts",
      "import": "./dist/gatsby-node.js"
    },
    "./gatsby-node": {
      "types": "./dist/gatsby-node.d.ts",
      "import": "./dist/gatsby-node.js"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nekobato/gatsby-plugin-pnpm"
  },
  "homepage": "https://github.com/nekobato/gatsby-plugin-pnpm#readme",
  "keywords": [
    "gatsby-plugin",
    "gatsby",
    "pnpm",
    "webpack"
  ],
  "author": "Jeremy Albright",
  "contributors": [
    "nekobato contributors"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nekobato/gatsby-plugin-pnpm/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "gatsby-node.js",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test"
  },
  "peerDependencies": {
    "gatsby": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "gatsby": "^5.16.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "type-fest": "^5.4.4",
    "typedoc": "^0.28.16",
    "typescript-eslint": "^8.45.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0",
    "webpack": "^5.105.1"
  }
}
