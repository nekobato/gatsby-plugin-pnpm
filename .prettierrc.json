{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",
  "semi": true,
  "tabWidth": 4,
  "useTabs": false,
  "quoteProps": "as-needed",
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.yaml", "*.md"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
